@model IEnumerable<BookLibrary.Models.Record>
@{
    ViewData["Title"] = "Records";
}

<h1>Records</h1>

@*<p>
    <a asp-action="Index">Create New Comment</a>
</p>*@
<table class="table">
    <thead>
      <tr>
        <th>
          @Html.DisplayNameFor(model => model.Comment)
        </th>
        <th>
          @Html.DisplayNameFor(model => model.Block)
        </th>
        <th>
          @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
          @Html.DisplayNameFor(model => model.Time)
        </th>
        <th></th>
      </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
      <tr>
        <td class="cc" style="padding: 0.1em;">
          @Html.DisplayFor(modelItem => item.Comment)
        </td>
        <td class="cc" style="padding: 0.1em;">
          @Html.DisplayFor(modelItem => item.Block.Title)
        </td>
        <td class="cc" style="padding: 0.1em;">
          @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td class="cc" style="padding: 0.1em;">
          @Html.DisplayFor(modelItem => item.Time)
        </td>
        <td class="cc" style="padding: 0.1em;">
          <a asp-action="EditRecord" asp-route-id="@item.RecordId">Edit</a> |
          @*<a asp-action="Details" asp-route-id="@item.LectureId">Details</a> |*@
          <a asp-action="DeleteRecord" asp-route-id="@item.RecordId">Delete</a>
        </td>
      </tr>
        }
    </tbody>
</table>

<div>
    <a asp-action="Index">Back</a>
</div>
